{
    "name": "diego-mascarenhas/emailer",
    "description": "Professional email marketing package with maximum deliverability.",
    "keywords": [
        "diego-mascarenhas",
        "laravel",
        "emailer",
        "email-marketing",
        "newsletter",
        "email-campaigns",
        "mailgun",
        "sendgrid",
        "smtp",
        "email-tracking"
    ],
    "homepage": "https://github.com/diego-mascarenhas/emailer",
    "license": "MIT",
    "authors": [
        {
            "name": "diego-mascarenhas",
            "email": "diego.mascarenhas@icloud.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0||^11.0||^12.0",
        "tijsverkoyen/css-to-inline-styles": "^2.2"
    },
    "suggest": {
        "mailgun/mailgun-php": "Required for Mailgun email provider support",
        "sendgrid/sendgrid": "Required for SendGrid email provider support"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "idoneo\\Emailer\\": "src/",
            "idoneo\\Emailer\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "idoneo\\Emailer\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "idoneo\\Emailer\\EmailerServiceProvider"
            ],
            "aliases": {
                "Emailer": "idoneo\\Emailer\\Facades\\Emailer"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
